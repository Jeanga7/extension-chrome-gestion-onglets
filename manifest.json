{
    "manifest_version": 3,
    "name": "Gestionnaire d'Onglets",
    "version": "1.0",
    "description": "Extension pour organiser et gérer vos onglets de manière efficace.",
    "permissions": [
      "tabs",
      "storage",
      "notifications" 
    ],
    "background": {
      "service_worker": "background.js"
    },
    "action": {
      "default_popup": "popup.html",
      "default_icon": {
        "16": "images/icon16.png",
        "48": "images/icon48.png",
        "128": "images/icon128.png"
      }
    },
    "icons": {
      "16": "images/icon16.png",
      "48": "images/icon48.png",
      "128": "images/icon128.png"
    }
  }
  